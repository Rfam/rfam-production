env.PYTHONPATH="$baseDir"

profiles {

    local {
        process {
            executor = 'local'
        }
    }
    cluster {
        process {
            executor = 'lsf'
            maxForks = 2000
            }

        executor {
            $lsf {
                queueSize = 10000
            }
        }
    }
    docker {
        process {
            container = 'emcooke/rfam-production:latest'
        }
        docker {
            enabled = true
        }

    }
    singularity {
        process {
            container = 'docker://docker.io/emcooke/rfam-production:latest'
        }
        singularity {
            enabled = true
        }

    }
}