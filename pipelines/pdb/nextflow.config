#!/usr/bin/env nextflow

nextflow.enable.dsl=2

env.PYTHONPATH="/nfs/production/agb/rfam/users/rfamprod/code/rfam-production"

params {
    rfamprod = "/nfs/production/agb/rfam/users/rfamprod/code/rfam-production"
    preview = "/nfs/ftp/public/databases/Rfam/.preview"
    search_dumps = "/nfs/production/agb/rfam/search_dumps"
    email = "ecooke@ebi.ac.uk"
    pdb_files = "/nfs/production/agb/rfam/pdb_files"
    pdb_scripts = "/nfs/production/agb/rfam/users/rfamprod/code/rfam-production/pdb_mapping"

}

process {
    executor = 'lsf'
    maxForks = 2000
    container = 'docker://rfam/rfam-3d-seed-alignments:latest'
}

executor {
    name = 'lsf'
    queueSize = 10000
}
